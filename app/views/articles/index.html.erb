<h1>Articles#index</h1>

<p><%= link_to 'home', controller: 'welcome', action: 'index' %></p>
<p><%= link_to 'new', new_article_path %></p>

<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Titre</th>
			<th>Texte</th>
			<th colspan="2"></th>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |art| %>
		<tr>
			<td><%= art.id %></td>
			<td><%= art.title %></td>
			<td><%= art.text %></td>
			<td><%= link_to 'Show', article_path(art) %></td>
			<td><%= link_to 'Edit', edit_article_path(art) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
